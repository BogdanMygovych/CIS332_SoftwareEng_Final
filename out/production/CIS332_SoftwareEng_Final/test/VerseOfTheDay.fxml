<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="test.VerseOfTheDayController"
      alignment="CENTER" spacing="10" stylesheets="@../styles.css">

    <Label text="Verse of the Day" styleClass="title"/>

    <ImageView fx:id="verseImage" fitWidth="500" fitHeight="300" preserveRatio="true" />

    <Label fx:id="verseText" wrapText="true" textAlignment="CENTER" styleClass="verse-text"/>
    <Label fx:id="verseReference" styleClass="verse-reference"/>
    <Button text="Next Verse" onAction="#onNextVerseClick" styleClass="menu-button"/>
    <Button text="Home" onAction="#onHomeClick" styleClass="home-button"/>
</VBox>