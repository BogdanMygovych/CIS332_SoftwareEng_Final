<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller ="test.WelcomePage"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;" prefWidth="600" prefHeight="400">

<ImageView fx:id="logoImageView" fitWidth="150" preserveRatio="true" />

<Label text="Welcome to Swiss Army App!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

<HBox spacing="10" alignment="CENTER">
    <Label text="Enter Nickname:" />
    <TextField fx:id="nicknameField" prefWidth="200"/>
    <Button text="Set Name" onAction="#handleSetName" style="-fx-background-color: #f9c2c3;" styleClass="menu-button"/>
</HBox>

</VBox>