<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="test.LandingPageController"
      alignment="TOP_CENTER" spacing="20" stylesheets="@../styles.css">

    <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" />

    <Label fx:id="welcomeText" text="Welcome to Swiss Army App!" styleClass="title"/>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Enter Nickname:" />
        <TextField fx:id="nameField" prefWidth="200"/>
        <Button text="Set Name" onAction="#onSetNameClick"/>
    </HBox>

    <VBox alignment="CENTER" spacing="10">
        <Button text="Hello!" onAction="#onHelloButtonClick" styleClass="menu-button"/>
        <Button text="Play Hangman" onAction="#onPlayHangmanClick" styleClass="menu-button"/>
        <Button text="Verse of the Day" onAction="#onVerseClick" styleClass="menu-button"/>
        <Button text="Tip Calculator" onAction="#openTipCalculator"/>
        <Button text="Sports" onAction="#onSportsClick" styleClass="menu-button"/>
        <Button text="Settings" onAction="#onSettingsClick" styleClass="menu-button"/>
    </VBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
